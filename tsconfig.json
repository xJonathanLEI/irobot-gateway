{
  "compilerOptions": {
    "baseUrl": "src",
    "target": "ES5",
    "lib": ["ESNEXT"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noImplicitAny": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true
  }
}
